// array in js 
const myArray=[0,1,2,3,4,5]
console.log(myArray[3]);
// arrays in js create shallow copies it is a copy whose property share the same refrence point
// as well as deep  copies  whose property do not share the same refrence point 
const myHeroes=["harevey","mike","maverick"]
/// also we can declare like these 
const myArr= new Array(1,2,3,4)// automaticalyy it will add th square brackets 
console.log(myHeroes[1]);

// Array methods
myArr.push(5)
myArr.pop()
console.log(myArr);

myArr.unshift(11) // add the element at the starting 
console.log(myArr);
myArr.shift() // pop out the firdt value 
