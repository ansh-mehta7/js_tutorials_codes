const newArray=myArr.join() // join binds the array and converts it into the string as well 

console.log( typeof newArray);
// slice and spice in js 

console.log("a", myArr);
const n1=myArr.slice(1,3)
console.log(n1);

console.log("b", myArr);
const n2=myArr.splice(1,3)

console.log(n2);
console.log("c", myArr); // splice manipulates the original array also unlike slice 